<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:id="@+id/square"
        android:layout_width="292dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/customcolor1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25sp"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/emailEditRegister"
            android:textSize="25sp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Felhasználó név"
            android:textSize="25sp" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/usernameEditRegister"
            android:textSize="25sp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jelszó"
            android:textSize="25sp" />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/passEditrRgister"
            android:textSize="25sp"
            android:inputType="textPassword"
            android:background="@color/white"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Regisztráció"
            android:textSize="25sp"
            android:id="@+id/send"
            android:backgroundTint="@color/customcolor4"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Vissza"
            android:textSize="25sp"
            android:id="@+id/backtobtn"
            android:backgroundTint="@color/customcolor4"
            />


    </LinearLayout>

</FrameLayout>